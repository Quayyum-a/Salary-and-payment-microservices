{
  "info": {
    "name": "Salary Payment Microservice",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Employees - Create",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"phone\": \"08012345678\",\n  \"account_number\": \"0123456789\",\n  \"bank_code\": \"057\",\n  \"salary_amount\": 500000\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/employees",
          "host": ["{{baseUrl}}"],
          "path": ["employees"]
        }
      }
    },
    {
      "name": "Employees - List",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/employees",
          "host": ["{{baseUrl}}"],
          "path": ["employees"]
        }
      }
    },
    {
      "name": "Employees - Get by ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/employees/:employeeId",
          "host": ["{{baseUrl}}"],
          "path": ["employees", ":employeeId"]
        }
      }
    },
    {
      "name": "Payments - Initialize",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"buyer@example.com\",\n  \"amount\": 5000\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/payments/initialize",
          "host": ["{{baseUrl}}"],
          "path": ["payments","initialize"]
        }
      }
    },
    {
      "name": "Payments - Verify",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/payments/verify/:reference",
          "host": ["{{baseUrl}}"],
          "path": ["payments","verify",":reference"]
        }
      }
    },
    {
      "name": "Payments - Webhook (simulate)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-paystack-signature",
            "value": "{{paystack_webhook_signature}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event\": \"charge.success\",\n  \"data\": {}\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/payments/webhook",
          "host": ["{{baseUrl}}"],
          "path": ["payments","webhook"]
        }
      }
    },
    {
      "name": "Salary - Pay Employee",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/salary/pay/:employeeId",
          "host": ["{{baseUrl}}"],
          "path": ["salary","pay",":employeeId"]
        }
      }
    },
    {
      "name": "Salary - Pay All",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/salary/pay-all",
          "host": ["{{baseUrl}}"],
          "path": ["salary","pay-all"]
        }
      }
    },
    {
      "name": "Salary - Transfer Status",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/salary/status/:transferCode",
          "host": ["{{baseUrl}}"],
          "path": ["salary","status",":transferCode"]
        }
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000"
    },
    {
      "key": "jwt_token",
      "value": ""
    },
    {
      "key": "paystack_webhook_signature",
      "value": ""
    }
  ]
}